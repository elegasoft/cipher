{
    "name": "elegasoft/cipher",
    "description": "A keyless version of the Vigenere Cipher",
    "keywords": [
        "php",
        "cipher",
        "laravel",
        "vigenere",
        "caesar"
    ],
    "homepage": "https://github.com/elegasoft/cipher",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jason Cook",
            "email": "jason@elegasoft.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^7.0|^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "brainmaestro/composer-git-hooks": "^2.8",
        "brianium/paratest": "^6.8",
        "laravel/pint": "^1.0",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Elegasoft\\Cipher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elegasoft\\Cipher\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "./vendor/bin/pint"
            ]
        },
        "laravel": {
            "providers": [
                "Elegasoft\\Cipher\\CipherServiceProvider"
            ],
            "aliases": {
                "Cipher": "Elegasoft\\Cipher\\CipherFacade"
            }
        }
    }
}
