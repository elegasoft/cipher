{
    "name": "elegasoft/cipher",
    "description": "A keyless version of the Vigen√®re Cipher",
    "keywords": [
        "php",
        "cipher",
        "laravel",
        "vigenere",
        "caesar"
    ],
    "homepage": "https://github.com/elegasoft/cipher",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jason Cook",
            "email": "jason@elegasoft.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "laravel/prompts": "^0.1.15|^1.0"
    },
    "require-dev": {
        "brianium/paratest": "^7.0|^8.0",
        "laravel/pint": "^1.0|^2.0",
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Elegasoft\\Cipher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Elegasoft\\Cipher\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "./vendor/bin/pint"
            ]
        },
        "laravel": {
            "providers": [
                "Elegasoft\\Cipher\\CipherServiceProvider"
            ],
            "aliases": {
                "Cipher": "Elegasoft\\Cipher\\CipherFacade"
            }
        }
    }
}
